{
	"presets": [
		"@babel/preset-typescript",
		[
			"@babel/preset-env",
			{
				"targets": {
					"node": true
				}
			}
		]
	],
	"plugins": [
		"@babel/plugin-proposal-class-properties",
		"@babel/plugin-proposal-object-rest-spread",
		[
			"babel-plugin-module-resolver",
			{
				"root": ["./"],
				"alias": {
					"@configuration": "./src/configuration",
                    "@middlewares": "./middlewares",
                    "@services": "./services"
				},
				"extensions": [".js", ".ts"]
			}
		]
	],
	"ignore": ["**/*.spec.ts"]
}